<h1>
  <%= @recipe.name %>
</h1>
<p>
  <%= @recipe.description %>
</p>

<%= link_to "Edit", edit_recipe_path(@recipe) %>
<%= link_to "Delete", @recipe, method: :delete, data: {confirm: "Delete Recipe?"} %>

<h2>Ingredients</h2>
<% @recipe.ingredients.each do |ingredient| %>
  <p><%= ingredient.amount %> of <%= ingredient.name %></p>
<% end %>
