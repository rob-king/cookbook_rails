<% flash.each do |type, messages| %>
  <h3><%= "#{type}:" %></h3>
  <% messages.each do |message| %>
    <p><strong><%= "#{message}" %></strong></p>
    <% end %>
<% end %>

<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit "Save" %>
<% end %>
